<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameDetailsCricketStandings"
    android:background="@color/white">

    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:rowCount="10"
        android:background="@color/material_dynamic_neutral80"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="0.75"
            android:layout_gravity="left|center_vertical"
            android:text="Team"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="0.1"
            android:layout_gravity="left|center_vertical"
            android:text="W"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="0.1"
            android:layout_gravity="left|center_vertical"
            android:text="L"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/india" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="0.75"
            android:layout_gravity="left|center_vertical"
            android:text="India"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="0.1"
            android:layout_gravity="left|center_vertical"
            android:text="10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="0.1"
            android:layout_gravity="left|center_vertical"
            android:text="9" />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="34dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/aus" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="0.75"
            android:layout_gravity="left|center_vertical"
            android:text="Australia" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="0.1"
            android:layout_gravity="left|center_vertical"
            android:text="8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="0.1"
            android:layout_gravity="left|center_vertical"
            android:text="2" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="34dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/eng" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="0.75"
            android:layout_gravity="left|center_vertical"
            android:text="English" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="0.1"
            android:layout_gravity="left|center_vertical"
            android:text="6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="0.1"
            android:layout_gravity="left|center_vertical"
            android:text="4" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="34dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/nx" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="0.75"
            android:layout_gravity="left|center_vertical"
            android:text="New Zealand" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="0.1"
            android:layout_gravity="left|center_vertical"
            android:text="6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="0.1"
            android:layout_gravity="left|center_vertical"
            android:text="4" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="34dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/pak" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnWeight="0.75"
            android:layout_gravity="left|center_vertical"
            android:text="Pakistan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_columnWeight="0.1"
            android:layout_gravity="left|center_vertical"
            android:text="6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_columnWeight="0.1"
            android:layout_gravity="left|center_vertical"
            android:text="4" />
    </GridLayout>
</FrameLayout>