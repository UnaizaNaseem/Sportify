<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GameDetailsNFLStandings">


        <GridLayout
            android:id="@+id/GridLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:rowCount="10"
            android:background="@color/material_dynamic_neutral80"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="0.75"
                android:layout_gravity="left|center_vertical"
                android:text="Team"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_columnWeight="0.1"
                android:layout_gravity="left|center_vertical"
                android:text="W"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_columnWeight="0.1"
                android:layout_gravity="left|center_vertical"
                android:text="L"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/jets" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="0.75"
                android:layout_gravity="left|center_vertical"
                android:text="Jets"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_columnWeight="0.1"
                android:layout_gravity="left|center_vertical"
                android:text="10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_columnWeight="0.1"
                android:layout_gravity="left|center_vertical"
                android:text="9" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="34dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/browns" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_columnWeight="0.75"
                android:layout_gravity="left|center_vertical"
                android:text="Browns" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_columnWeight="0.1"
                android:layout_gravity="left|center_vertical"
                android:text="8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_columnWeight="0.1"
                android:layout_gravity="left|center_vertical"
                android:text="2" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="34dp"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/intermilan" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_columnWeight="0.75"
                android:layout_gravity="left|center_vertical"
                android:text="Miami Dolphins" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_columnWeight="0.1"
                android:layout_gravity="left|center_vertical"
                android:text="6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="3"
                android:layout_columnWeight="0.1"
                android:layout_gravity="left|center_vertical"
                android:text="4" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="34dp"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/denvernba" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_columnWeight="0.75"
                android:layout_gravity="left|center_vertical"
                android:text="Golden Knights" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="2"
                android:layout_columnWeight="0.1"
                android:layout_gravity="left|center_vertical"
                android:text="6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="3"
                android:layout_columnWeight="0.1"
                android:layout_gravity="left|center_vertical"
                android:text="4" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="34dp"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/knicks" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_columnWeight="0.75"
                android:layout_gravity="left|center_vertical"
                android:text="Knicks" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="2"
                android:layout_columnWeight="0.1"
                android:layout_gravity="left|center_vertical"
                android:text="6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="3"
                android:layout_columnWeight="0.1"
                android:layout_gravity="left|center_vertical"
                android:text="4" />
        </GridLayout>

</FrameLayout>