<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".GameDetailsEPLUpcoming"
    android:background="@color/white">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/grey_bg">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/race"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Round 6: Italy"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/racedetail"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="Qatar Airways Emilia Romagna Grand Prix"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="90dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:background="#682E2D2D" />

        <TextView
            android:id="@+id/datef1"
            android:layout_width="51dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginRight="40dp"
            android:gravity="end"
            android:text="Sun, 14/05 10:00 pm"
            android:textColor="@color/text_grey"/>

    </androidx.cardview.widget.CardView>
</FrameLayout>